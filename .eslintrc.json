{
    "extends": ["eslint:recommended"],
    "env": {
        "browser": true,
        "node": true,
        "es6": true,
        "mocha": true
    },
    "parser": "babel-eslint",
    "rules": {
        "comma-dangle": "off",
        "no-extra-semi": "off",
        "prettier/prettier": "error"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "plugins": ["prettier"],
    "settings": {
        "react": {
            "version": "detect"
        }
    }
}
